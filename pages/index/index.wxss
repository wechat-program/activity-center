.tcontainer {
  background-color: whitesmoke;
}

.record-item {
  padding: 20rpx;
  margin: 8rpx 0 7rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.title {
  left: 0;
  height: 50rpx;
}

.avatar {
  position: relative;
  display: inline-block;
}

.avatar image {
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
  background-color: rgba(221, 221, 221, 0.253);
}

.title text {
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  vertical-align: middle;
  margin-right: 15rpx;
  color: #a0acac;
  font-size: 37rpx;
}

.content {
  padding: 10rpx 0 5rpx 0;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 37rpx;
}

.tail {
  left: 0;
  padding: 10rpx 0 0;
}

.tail view {
  display: inline-block;
  vertical-align: middle;
  color: #a0acac;
  font-size: 35rpx;
}
