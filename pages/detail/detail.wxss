.title {
  position: relative;
  padding: 40rpx 37rpx 35rpx;
  background: #ddd;
  color: #3f3f3f;
  font-size: 39rpx;
  line-height: 50rpx;
}

.title-info {
  flex: 5;
  text-align: left;
  padding-left: 20rpx;
  line-height: 50rpx;
}

.title .title-info .organizer-name {
  font-size: 39rpx;
  display: block;
}

.title .title-info .title-des {
  font-size: 35rpx;
  color: #808080;
  line-height: 40rpx;
  display: block;
}

.avatar {
  flex: 1;
  width: 100rpx;
  height: 100rpx;
}

.avatar image {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 90rpx;
  background-color: #fff;
}

.content {
  padding: 30rpx 40rpx;
  background: #fff;
}

.content text {
  font-size: 32rpx;
  color: #454545;
  line-height: 44rpx;
}

.content image {
  width: 100%;
  margin: 20rpx 0;
}
